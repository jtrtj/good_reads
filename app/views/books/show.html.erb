<body>
  <h1><%= @book.title %></h1>
  <h2>Average Rating: <%= @book.avg_rating %></h2>
  <div id="high">
    <h2>Highest Rating: <%= @highest_review.rating %></h2>
    <p>Review: <%= @highest_review.body %></p>
    <p>User: <%= @highest_review.user.name %></p>
  </div>

  <% @book.reviews.each do |review| %>
    <section>
      <h1>User: <%= review.user.name %></h1>
      <p>Review: <%= review.body %></p>
      <p>Rating: <%= review.rating %></p>
    </section>
  <% end %>
</body>